.chatRoom {
  max-height: 100%;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
.notice-box {
  position: relative;
  width: 100%;
  background-color: #FFFFFF;
}
.notice {
  color: #F08D49;
  display: flex;
  justify-content: center;
  align-content: center;
}
.userMessage-box {
  width: 100%;
  height: auto;
}
.myMessage-box {
  width: 100%;
  height: 100%;
}
.userHeader-box {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}
.myHeader-box {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row-reverse;
}
.userAvatar {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.myAvatar {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.nickName {
  font-size: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #007AFF;
  margin-left: 10rpx;
  font-weight: bold;
}
.date {
  font-size: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
}
.userContent-box {
  position: relative;
  background-color: #FFFFFF;
  padding: 10px;
  border-radius: 5px 20px 20px 20px;
  width: -webkit-fit-content;
  width: fit-content;
  color: black;
  margin-left: 90rpx;
}
.myContent-box {
  position: relative;
  border-radius: 20px 5px 20px 20px;
  width: -webkit-fit-content;
  width: fit-content;
  padding: 10px;
  background: #12b7f5;
  color: #fff;
  float: right;
  margin-right: 90rpx;
}
.both {
  clear: both;
}
.audio-box {
  width: 50rpx;
  height: 50rpx;
}
.audio {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.footer {
  margin-top: 39rpx;
  width: 100%;
  height: 75rpx;
  background-color: #E9EDF4;
  display: flex;
  position: -webkit-sticky;
  position: sticky;
  bottom: 0;
  justify-content: space-between;
  align-items: center;
}
.footer .content-wrap {
  width: 78vw;
  margin-left: 2vw;
}
.footer .content {
  width: 100%;
  box-sizing: border-box;
  margin: 14rpx 0;
  background-color: #FFFFFF;
  border-radius: 30rpx;
  padding: 6rpx;
  caret-color: #01B4FE;
  height: 65rpx;
}
.footer .btn-wrap {
  width: 18vw;
  margin-right: 2vw;
}
.footer .btn {
  width: 16%;
  height: 50rpx;
  text-align: center;
  font-size: 20rpx;
  margin-left: 2%;
  background-color: #01B4FE;
  color: #FFFFFF;
  position: fixed;
  border: 0;
  outline: none;
  bottom: 3.2vh;
}
.footer .btn-wrap .disabled {
  background-color: #aae8f5;
}
 .uni-textarea-wrapper {
  min-height: 70rpx;
}

