.mixLogin {
  width: 100%;
  height: 100vh;
  background-color: #F1F8FA;
}
.top {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top image {
  width: 300rpx;
  height: 300rpx;
}
.login-box {
  width: 100%;
}
.username {
  width: 80%;
  margin: 20rpx auto;
}
.username input {
  height: 80rpx;
  padding: 0 25rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #FFF;
  flex: 1;
  border-bottom: 1rpx solid #F4F4F4;
  border-radius: 50rpx;
}
.password {
  width: 80%;
  margin: 20rpx auto;
  display: flex;
  justify-content: space-between;
}
.password input {
  height: 80rpx;
  padding: 0 25rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  flex: 4;
  border-bottom: 1rpx solid #F4F4F4;
  border-radius: 50rpx;
}
.password .clear {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FFFFFF;
}
.fr-box {
  width: 80%;
  margin: 20rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fr-box .forget {
  display: flex;
  font-size: 24rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #333333;
  margin-top: 30rpx;
}
.fr-box .register {
  display: flex;
  font-size: 24rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #007AFF;
  margin-top: 30rpx;
}
.login-btn-box {
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}
.login-btn-box .login-btn {
  background-image: linear-gradient(to top, #4481eb 0%, #04befe 100%);
  font-size: 32rpx;
  width: 80%;
  border-radius: 50rem !important;
}
.agreement-box {
  position: fixed;
  width: 100%;
  bottom: 50rpx;
  text-align: center;
  z-index: 999;
}
.agreement-box text {
  font-size: 24rpx;
}
.agreement-box .text2 {
  color: #F08D49;
}
.slot-content ._p {
  font-size: 24rpx;
  text-align: left;
}

