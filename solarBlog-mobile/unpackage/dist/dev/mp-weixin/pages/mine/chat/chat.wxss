.chat {
  height: 100vh;
}
.tips-box {
  background-color: #FFFFFF;
  height: 100rpx;
  z-index: 999;
  margin: 10rpx 0;
}
.tips-box .tips-title {
  color: #000000;
  font-size: 32rpx;
  text-align: center;
}
.tips-box .tips-content {
  color: gray;
  font-size: 24rpx;
  text-align: center;
}
.online-box {
  width: 100%;
  height: 60rpx;
  background-color: #FFFFFF;
  position: relative;
  padding: 10rpx;
  z-index: 9999;
}
.online-box .online-number {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #F0AD4E;
}
.chat-box {
  position: relative;
  width: 100%;
  height: calc(100vh - 280rpx);
  transition: height .15s;
}
.chat-box .scroll-view {
  position: relative;
  height: 100%;
}
.chat-box .scroll-view .userMessage-box {
  position: relative;
  display: grid;
  margin: 10rpx 0;
}
.chat-box .scroll-view .userMessage-box .nickName-box {
  position: relative;
}
.chat-box .scroll-view .userMessage-box .nickName-box .userAvatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 10rpx;
  vertical-align: middle;
}
.chat-box .scroll-view .userMessage-box .nickName-box .nickName {
  font-size: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #007AFF;
  margin-left: 10rpx;
  font-weight: bold;
}
.chat-box .scroll-view .userMessage-box .nickName-box .date {
  font-size: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
}
.chat-box .scroll-view .userMessage-box .userContent-box {
  position: relative;
  padding-left: 81.81rpx;
  padding-right: 254.54rpx;
  min-height: 63.63rpx;
}
.chat-box .scroll-view .userMessage-box .userContent-box .userContent {
  position: relative;
  padding: 12.72rpx;
  font-size: 32rpx;
  width: -webkit-fit-content;
  width: fit-content;
  top: 0;
  background: #FFFFFF;
  color: #000000;
  border-radius: 5px 20px 20px 20px;
}
.chat-box .scroll-view .myMessage-box {
  position: relative;
  display: grid;
  margin: 10rpx;
}
.chat-box .scroll-view .myMessage-box .nickName-box {
  position: absolute;
  right: 0;
  top: 0;
}
.chat-box .scroll-view .myMessage-box .nickName-box .myAvatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 10rpx;
  vertical-align: middle;
}
.chat-box .scroll-view .myMessage-box .nickName-box .nickName {
  font-size: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #007AFF;
  margin-left: 10rpx;
  font-weight: bold;
}
.chat-box .scroll-view .myMessage-box .nickName-box .date {
  font-size: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 10rpx;
}
.chat-box .scroll-view .myMessage-box .myContent-box {
  position: relative;
  padding-right: 81.81rpx;
  padding-left: 254.54rpx;
  min-height: 63.63rpx;
}
.chat-box .scroll-view .myMessage-box .myContent-box .myContent {
  float: right;
  margin-top: 80rpx;
  padding: 12.72rpx;
  font-size: 32rpx;
  width: -webkit-fit-content;
  width: fit-content;
  background: #12b7f5;
  color: #FFFFFF;
  border-radius: 20px 5px 20px 20px;
}
.chat-box.tools {
  height: calc(100vh - 500rpx);
  transition: height .15s;
}
.footer-box {
  background-color: #FFFFFF;
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
  position: fixed;
  z-index: 999999;
  width: 100%;
  bottom: 0;
  left: 0;
}
.footer-box .action-box {
  display: flex;
  position: relative;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
}
.footer-box .action-box .action {
  margin: auto 10rpx;
}
.footer-box .action-box .action:first-child {
  margin-left: 20rpx;
}
.footer-box .action-box .action:last-child {
  margin-right: 20rpx;
}
.footer-box .action-box .action text {
  color: gray;
  font-size: 48rpx;
}
.footer-box .action-box .action .btn {
  background-color: #01B4FE;
  color: #FFFFFF;
  width: 90rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 18rpx;
  border: 0;
  outline: none;
}
.footer-box .action-box .action .btn.disabled {
  background-color: #aae8f5;
}
.footer-box .action-box .input {
  background: #F8F8F8;
  border-radius: 90.9rpx;
  padding: 0 27.27rpx;
  font-size: 32rpx;
  margin: auto 10rpx;
  min-width: 65%;
  min-height: 60rpx;
}
.footer-box .action-box .input + .action {
  margin-right: 0;
  margin-left: 0;
}
.footer-box .quickInput-box,
.footer-box .emoji-box {
  position: relative;
  overflow-y: auto;
  height: 0;
  transition: height .15s;
}
.footer-box .quickInput-box .quickInput-item {
  height: 81.81rpx;
  line-height: 81.81rpx;
  text-align: center;
}
.footer-box .quickInput-box .quickInput-item + .quickInput-item {
  border-top: 2rpx solid #f3f3f3;
}
.footer-box .emoji-box .emoji-scroll-view-box {
  position: relative;
}
.footer-box .emoji-box .emoji-scroll-view-box .emoji-swiper {
  height: 272.72rpx;
}
.footer-box .emoji-box .emoji-scroll-view-box .swiper-item {
  background-color: inherit;
  padding: 0 9.09rpx;
}
.footer-box .emoji-box .emoji-scroll-view-box .swiper-item .emoji {
  margin: 14.54rpx 29.63rpx;
  width: 45.45rpx;
  height: 45.45rpx !important;
}
.footer-box .quickInput-box.show,
.footer-box .emoji-box.show {
  height: 327.27rpx;
  transition: height .15s;
}
.footer-box .emoji-tools-scroll-view {
  position: relative;
  width: 100%;
}
.footer-box .emoji-tools-scroll-view .emoji-tools-item {
  display: inline-block;
  padding-top: 2rpx;
  border-right: 2rpx solid #F8F8F8;
}
.footer-box .emoji-tools-scroll-view .emoji-tools-item .emoji {
  width: 36.36rpx;
  height: 36.36rpx !important;
  margin: 5.45rpx 18.18rpx;
  position: relative;
  top: 3.63rpx;
}
.footer-box .emoji-tools-scroll-view .emoji-tools-item.select {
  background: #cfcfcf;
}

